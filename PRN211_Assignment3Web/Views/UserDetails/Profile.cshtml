@model PRN211_Assignment3Library.Models.UserDetail

@{
    ViewData["Title"] = "Profile";
}


<section class="vh-100" style="background-color: #CCCCCC;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQoSbTnmcrKj_5b2fKbU1Gl123ne2N6WAKqdkEHS1FTHw&s"
                                 alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                            <h5>@Model.Name</h5>
                            <p>User</p>
                            <a href="@Url.Action("EditProfile", "UserDetails")" class="btn btn-outline-light mb-5">Edit Profile</a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Date of Birth</h6>
                                        <p class="text-muted">@Model.DateBirth</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Address</h6>
                                        <p class="text-muted">@Model.Address</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@Model.Email</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Phone</h6>
                                        <p class="text-muted">@Model.Phone</p>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <a asp-controller="Home" asp-action="Index" style="color: #000; border: 1px solid #000;" class="btn btn-outline-light">Back to Home</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .gradient-custom {
        background: #000;
    }
</style>

